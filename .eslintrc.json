{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-param-reassign":"off",
      "class-methods-use-this":"off",
      "no-empty-function":"warn",
      "no-unused-vars":"warn",
      "camelcase":"warn",
      "import/extensions" : [
        "error",
        "ignorePackages",
        {
          "ts":"never"
        }
      ]
    },
    "settings": {
      "import/resolver" : {
        "typescript": {}
      }
    }
}
